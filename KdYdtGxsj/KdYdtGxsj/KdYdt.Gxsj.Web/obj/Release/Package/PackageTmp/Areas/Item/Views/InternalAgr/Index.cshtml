@model  KdDataResponse<PayPact>

@using (Html.BeginPageTitle())
{
    @Html.BbBtnLinkAdd()
    @Html.BbBtnGridDelete(this.Model)
}

@using (Html.BeginDataGrid())
{
    using (Html.BeginNavBreadcrumbWithSearch(this.Model, true))
    {
        @Html.BbSearchFor(x => x.PrjStatus)
        @Html.BbSearchFor(x => x.PrjCode)
        @Html.BbSearchFor(x => x.PrjName)
        @Html.BbSearchFor(x => x.PactCode)
        @Html.BbSearchFor(x => x.AwardUnit)
        @Html.BbSearchFor(x => x.BidDate)
        @Html.BbSearchFor(x => x.StartsDate)
    }
    @Html.TabHeader()
    using (Html.BeginDataTable())
    {
        using (Html.BeginDataTableHeader(true))
        {
            @Html.BbTHeadFor(x => x.PrjStatus)
            @Html.BbTHeadFor(x => x.PrjCode)
            @Html.BbTHeadFor(x => x.PrjName)
            @Html.BbTHeadFor(x => x.PactCode)
            @Html.BbTHeadFor(x => x.PactMoney)
            @Html.BbTHeadFor(x => x.AwardUnit)
            @Html.BbTHeadFor(x => x.BidDate)
            @Html.BbTHeadFor(x => x.StartsDate)
        }

        using (Html.BeginDataTableBody())
        {
            foreach (PayPact item in Model)
            {
                using (Html.BeginDataTableRow(item, true))
                {
                    <td>@item.PrjStatus</td>
                    <td>@item.PrjCode</td>
                    <td>@Html.ActionLink(item.PrjName, "Edit", new { id = item.Id })</td>
                    <td>@item.PactCode</td>
                    <td>@item.PactMoney</td>
                    <td>@item.AwardUnit</td>
                    <td>@item.BidDate.ToDateString()</td>
                    <td>@item.StartsDate.ToDateString()</td>
                }
            }
        }
    }
}